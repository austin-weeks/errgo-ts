{
  "name": "errgo-ts",
  "version": "0.1.2",
  "author": {
    "name": "Austin Weeks",
    "url": "https://github.com/austin-weeks"
  },
  "description": "A lightweight error handling library inspired by Go and Rust.",
  "keywords": [
    "error",
    "errors",
    "result",
    "go",
    "rust",
    "try",
    "catch",
    "error handling"
  ],
  "homepage": "https://github.com/austin-weeks/errgo-ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/austin-weeks/errgo-ts.git"
  },
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "lint": "eslint . ",
    "test": "vitest run --coverage --reporter verbose",
    "test:watch": "vitest watch --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "tsc",
    "local-ci": "pnpm i && pnpm run format:check && pnpm run lint && pnpm run test && pnpm run build",
    "prepublishOnly": "pnpm run format:check && pnpm run test && pnpm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.33.0",
    "jiti": "^2.5.1",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vitest": "^3.2.4"
  }
}
